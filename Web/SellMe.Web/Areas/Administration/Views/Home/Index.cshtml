@model AdministrationIndexStatisticViewModel

<h3 class="text-center mb-3">Admin panel</h3>
<nav class="navbar navbar-expand-lg navbar-light bg-light mb-5">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">
            <li class="nav-item active mr-5">
                <a class="nav-link" asp-area="Administration" asp-controller="Users" asp-action="All">Registered users: @Model.AllUsersCount <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item active mr-5">
                <a class="nav-link" asp-area="Administration" asp-controller="Ads" asp-action="AllActiveAds">Active ads: @Model.AllAdsCount</a>
            </li>
            <li class="nav-item active mr-5">
                <a class="nav-link" href="#">Promoted Ads: @Model.AllPromotedAdsCount</a>
            </li>
            <li class="nav-item dropdown active mr-5">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Menu
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item" asp-area="Administration" asp-controller="Ads" asp-action="ForApproval">Waiting for approval</a>
                    <a class="dropdown-item" asp-area="Administration" asp-controller="Ads" asp-action="RejectedAds">Rejected ads</a>
                </div>
            </li>
        </ul>
    </div>
</nav>

<div class="row">
    <div class="offset-1 col-10" style="height: 500px;">
        <div id="chartContainer">

        </div>
    </div>
</div>

@section Scripts
{
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
    <script type="text/javascript">
        window.onload = function () {
            var chart = new CanvasJS.Chart("chartContainer", {
                theme: "light2",
                animationEnabled: true,
                title: {
                    text: "Created ads for the last 10 days"
                },
                axisX: {
                    title: "Days"
                },
                axisY: {
                    title: "Ads count"
                },
                data: [
                    {
                        type: "splineArea", //change type to bar, line, area, pie, etc
                        dataPoints: @Html.Raw(ViewBag.DataPoints)
                    }
                ]
            });
            chart.render();
        };
    </script>
}
