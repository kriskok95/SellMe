@model List<MyActiveAdsViewModel>

<div class="container-fluid">
    <div class="row">
        <div class="offset-2 col-8">
            <h3 class="text-center">My Active Ads:</h3>
            <hr class="hr-sell-me" />
            <div class="card text-center">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" href="#">Active</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Ads" asp-action="ArchivedAds">Archived</a>
                        </li>
                    </ul>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Date</th>
                                    <th scope="col">Picture</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Details</th>
                                    <th scope="col">Update</th>
                                    <th scope="col">Edit</th>
                                    <th scope="col">Archive</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < @Model.Count; i++)
                                {
                                <tr class="trElm">
                                    <td>
                                        <div class="row">
                                            <div class="col text-left">
                                                From: @Model[i].CreatedOn.ToString("dd/MM")
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col text-left">
                                                To: @Model[i].ActiveTo.ToString("dd/MM")
                                            </div>
                                        </div>
                                    </td>
                                    <td><img style="height: 40px; width: 60px" src="@Model[i].ImageUrl" /></td>
                                    <vc:title-length ad-title="@Model[i].Title"></vc:title-length>
                                    <td>@Model[i].Price$</td>
                                    <td><a asp-controller="Ads" asp-action="Details" asp-route-id="@Model[i].Id" class="btn btn-info btn-sm">Details</a></td>
                                    <td><a asp-controller="Ads" asp-action="Update" asp-route-adId="@Model[i].Id" class="btn btn-success btn-sm">Update</a></td>
                                    <td><a asp-controller="Ads" asp-action="Edit" asp-route-id="@Model[i].Id" class="btn btn-warning btn-sm">Edit</a></td>
                                    <td><a asp-controller="Promotions" asp-action="Index" asp-route-adId="@Model[i].Id" class="btn btn-primary btn-sm">Promote</a></td>
                                    <td><button type="button" value="@Model[i].Id" class="btn btn-danger archive btn-sm">Archive</button></td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

