@model AdsByCategoryViewModel
@{
    ViewData["Title"] = "Ads by category";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb breadcrumb-sell-me">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.CategoryName</li>
    </ol>
</nav>
<div class="row">
    <div class="col">
        <div class="jumbotron jumbotron-fluid jumbotron-sell-me">
            @for (int i = 0; i < @Model.AdsByCategorySubcategoryViewModels.Count; i += 4)
            {
                <div class="row justify-content-start my-4">
                    @for (int j = i; j < i + 4; j++)
                    {
                        if (j < @Model.AdsByCategorySubcategoryViewModels.Count)
                        {
                            <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12">
                                <a asp-controller="Ads" asp-action="AdsBySubcategory" asp-route-categoryId="@Model.CategoryId" asp-route-subcategoryId="@Model.AdsByCategorySubcategoryViewModels[j].Id">
                                    <h5>-@Model.AdsByCategorySubcategoryViewModels[j].Name-</h5>
                                </a>
                            </div>
                        }
                    }
                </div>
            }
        </div>
    </div>
</div>
<div class="row">
    <vc:categories-side-bar>
    </vc:categories-side-bar>
    <div class="offset-1">
        @foreach (var ad in @Model.AdsViewModels)
        {
            <div class="mb-4">
                <div class="card border-dark" style="width: 30rem;">
                    <img class="card-img-top" src="@ad.ImageUrl" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@ad.Title</h5>
                        <ul class="list-group list-group-flush ul-custom">
                            <li class="list-group-item row"><i class="fas fa-dollar-sign"></i> Price: @ad.Price</li>
                            <li class="list-group-item row"><i class="fas fa-folder"></i> @ad.CategoryName/@ad.SubcategoryName</li>
                            <li class="list-group-item row"><i class="far fa-calendar-alt"></i> @ad.CreatedOn.ToString("dd/MM/yyyy")</li>
                        </ul>
                        <a asp-controller="Ads" asp-action="Details" asp-route-id="@ad.Id" class="btn btn-primary btn-block mt-4">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>