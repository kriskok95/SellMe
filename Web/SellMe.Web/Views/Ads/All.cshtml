@using Microsoft.IdentityModel.Protocols.OpenIdConnect
@model AdsAllViewModel
@inject IUsersService UsersService

@{
    ViewData["Title"] = "Ads all";
    var currentUser = this.UsersService.GetCurrentUser();
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">All</li>
    </ol>
</nav>
<div class="container-fluid">
    <div class="row">
        <vc:categories-side-bar>
        </vc:categories-side-bar>
        <div class="offset-1 col-4 pl-0">
            @foreach (var ad in @Model.AdsViewModels)
            {
                <div class="mb-4">
                    <div class="card border-dark" style="width: 30rem;">
                        <img class="card-img-top" src="@ad.ImageUrl" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">@ad.Title</h5>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item row"><i class="fas fa-dollar-sign"></i> Price: @ad.Price</li>
                                <li class="list-group-item row"><i class="fas fa-folder"></i> @ad.CategoryName/@ad.SubcategoryName</li>
                                <li class="list-group-item row"><i class="far fa-calendar-alt"></i> @ad.CreatedOn.ToString("dd/MM/yyyy")</li>
                            </ul>
                            <div class="row">
                                <div class="col-6">
                                    <a asp-controller="Ads" asp-action="Details" asp-route-id="@ad.Id" class="btn btn-primary btn-block mt-4">Details</a>
                                </div>
                                <div class="col-6">
                                    @if (!currentUser.SellMeUserFavoriteProducts.Any(x => x.AdId == ad.Id && x.SellMeUserId == currentUser.Id))
                                    {
                                        <button type="button" value="@ad.Id" class="btn btn-primary btn-block mt-4 addToFavorites" id="@ad.Id">Add To Favorites</button>
                                    }
                                    else
                                    {
                                        <button type="button" value="@ad.Id" class="btn btn-danger btn-block mt-4 removeFromFavorites" id="@ad.Id">Remove From Favorites</button>
                                    }
                                    @*<vc:add-to-favorites-button ad-id="@ad.Id">
                                    </vc:add-to-favorites-button>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $(document).ready(function () {
        $(".container-fluid").on('click', '.addToFavorites', function () {
            var adId = $(this).val();

            $.ajax({
                url: "/Favorites/Add",
                type: "GET",
                data: "adId=" + adId,
                dataType: 'json',
                success: function (response) {
                    alert("You have successfully added this ad to favorites!");
                    $("#" + adId).replaceWith('<button type="button" value="' + adId + '"' + 'class="btn btn-danger btn-block mt-4 removeFromFavorites" id="' + adId + '">Remove From Favorites</button>');
                }
            });
        });
        $(".container-fluid").on('click', '.removeFromFavorites', function () {
            var adId = $(this).val();

            $.ajax({
                url: "/Favorites/Remove",
                type: "GET",
                data: "adId=" + adId,
                dataType: 'json',
                success: function (response) {
                    alert("You have successfully removed this ad from favorites!");
                    $("#" + adId).replaceWith('<button type="button" value="' + adId + '"' + 'class="btn btn-primary btn-block mt-4 addToFavorites" id="' + adId + '">Add To Favorites</button>');
                }
            });
        });
    });
</script>

