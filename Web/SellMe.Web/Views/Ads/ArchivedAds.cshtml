@model List<MyArchivedAdsViewModel>

<div class="container-fluid">
    <div class="row">
        <div class="offset-2 col-8">
            <h3 class="text-center">My Active Ads:</h3>
            <hr class="hr-sell-me" />
            <div class="card text-center">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Ads" asp-action="ActiveAds">Active</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="#">Archived</a>
                        </li>
                    </ul>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Picture</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Edit</th>
                                    <th scope="col">Activate</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < @Model.Count; i++)
                                {
                                    <tr class="removeElement">
                                        <th scope="row">@i</th>
                                        <td><img style="height: 40px; width: 60px" src="@Model[i].ImageUrl" /></td>
                                        <td>@Model[i].Title</td>
                                        <td>@Model[i].Price$</td>
                                        <td><button type="button" class="btn btn-warning">Edit</button></td>
                                        <td><button type="button" value="@Model[i].Id" class="btn btn-primary activate">Activate</button></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            var elementForRemove;
            $(".removeElement").click(function() {
                elementForRemove = $(this);
            });
            $(".activate").click(function () {
                var adId = $(this).val();
                console.log(adId);

                $.ajax({
                    url: "ActivateAd",
                    type: "GET",
                    data: "adId=" + adId,
                    dataType: 'json',
                    success: function (response) {
                        elementForRemove.hide('slow', function () { elementForRemove.remove(); });
                    }
                });
            });
        });

    </script>
}

