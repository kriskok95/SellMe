@model SellMe.Web.ViewModels.InputModels.Products.CreateAdInputModel
@inject IAdsService AdsService
@inject IAddressService AddressService;

@{
    var categories = this.AdsService.GetCategoryNames();
    var conditions = this.AdsService.GetConditionsFromDb();
    var countries = this.AddressService.GetAllCountries();
}

<div class="container-fluid">

    <form asp-controller="Ads" asp-action="Create" enctype="multipart/form-data" method="post">
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
                <h2 class="text-center">Ad Details</h2>
                <div class="form-group">
                    <label asp-for="CreateAdDetailInputModel.Title">Title</label>
                    <input asp-for="CreateAdDetailInputModel.Title" class="form-control">
                    <span asp-validation-for="CreateAdDetailInputModel.Title" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="CreateAdDetailInputModel.Category">Choose Category</label>
                        <select asp-for="CreateAdDetailInputModel.Category" class="form-control">
                            <option selected="true" disabled="disabled">--Select--</option>"
                            @foreach (var category in categories)
                            {
                                <option value="@category">@category</option>
                            }
                        </select>
                        <span asp-validation-for="CreateAdDetailInputModel.Category" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="CreateAdDetailInputModel.SubCategory">Choose Subcategory</label>
                        <select asp-for="CreateAdDetailInputModel.SubCategory" class="form-control"></select>
                        <span asp-validation-for="CreateAdDetailInputModel.SubCategory" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="CreateAdDetailInputModel.Price">Price</label>
                        <input asp-for="CreateAdDetailInputModel.Price" type="number" class="form-control" placeholder="Enter price">
                        <span asp-validation-for="CreateAdDetailInputModel.Price" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="CreateAdDetailInputModel.Availability">Availability</label>
                        <input asp-for="CreateAdDetailInputModel.Availability" class="form-control" placeholder="Enter availability">
                        <span asp-validation-for="CreateAdDetailInputModel.Availability" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CreateAdDetailInputModel.Condition">Condition</label>
                    <select asp-for="CreateAdDetailInputModel.Condition" class="form-control">
                        <option selected="true" disabled="disabled">--Select--</option>"
                        @foreach (var condition in conditions)
                        {
                            <option>@condition</option>
                        }
                    </select>
                    <span asp-validation-for="CreateAdDetailInputModel.Condition" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CreateAdDetailInputModel.Description">Description</label>
                    <textarea asp-for="CreateAdDetailInputModel.Description" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="CreateAdDetailInputModel.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @for (int i = 0; i < 3; i++)
                    {
                        <div class="row">
                            <div class="col-6">
                                <p><input asp-for="CreateAdDetailInputModel.Images" type="file" /> </p>
                            </div>
                            <div class="col-6">
                                <p><input asp-for="CreateAdDetailInputModel.Images" type="file" /> </p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
                <h2 class="text-center">Contact Details</h2>
                <div class="form-group">
                    <label asp-for="CreateAdAddressInputModel.Country">Country</label>
                    <select asp-for="CreateAdAddressInputModel.Country" class="form-control">
                        @foreach (var country in countries)
                        {
                            <option>@country</option>
                        }
                    </select>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="CreateAdAddressInputModel.City">City</label>
                            <input asp-for="CreateAdAddressInputModel.City" class="form-control">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="CreateAdAddressInputModel.Street">Street Address</label>
                            <input asp-for="CreateAdAddressInputModel.Street" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="CreateAdAddressInputModel.District">District</label>
                            <input asp-for="CreateAdAddressInputModel.District" class="form-control">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="CreateAdAddressInputModel.ZipCode">Zip/Postal Code</label>
                            <input asp-for="CreateAdAddressInputModel.ZipCode" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="CreateAdAddressInputModel.PhoneNumber">Phone Number</label>
                            <input asp-for="CreateAdAddressInputModel.PhoneNumber" class="form-control">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="CreateAdAddressInputModel.EmailAddress">Email Address</label>
                            <input asp-for="CreateAdAddressInputModel.EmailAddress" class="form-control">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-5"></div>
            <button type="submit" class="btn btn-dark col-2">Submit</button>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script>
        $(document).ready(function () {
            $('#CreateAdDetailInputModel_Category').on("change",
                function () {
                    var categoryName = $(this).find('option:selected').val();
                    console.log(categoryName);
                    $.ajax({
                        url: "GetSubcategories",
                        type: "GET",
                        data: "categoryName=" + categoryName,
                        dataType: 'json',
                        success: function (response) {
                            $("#CreateAdDetailInputModel_SubCategory").empty(); //Reset subcategories
                            $("#CreateAdDetailInputModel_SubCategory").append("<option>--Select--</option>");
                            $.each(response, function (key, value) {
                                $("#CreateAdDetailInputModel_SubCategory").append('<option value=' + value.name + '>' + value.name + '</option>');
                                console.log(value.name);
                            });
                        }
                    });
                });
        });
    </script>
}



