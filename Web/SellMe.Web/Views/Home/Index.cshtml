@model IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div class="row">
        <div class="offset-1 col-md-10">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active" aria-current="page">Home</li>
                </ol>
            </nav>
            <div class="jumbotron pb-3 pt-3 pl-3 pr-3">
                @for (int i = 0; i < @Model.CategoryViewModels.Count; i += 4)
                {
                    <div class="row justify-content-around my-4">
                        @for (int j = i; j < i + 4; j++)
                        {
                            if (j < @Model.CategoryViewModels.Count)
                            {
                                <div class="col-3"><h5><i class="@Model.CategoryViewModels[j].FontAwesomeIcon"></i> @Model.CategoryViewModels[j].Name</h5></div>
                            }
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
