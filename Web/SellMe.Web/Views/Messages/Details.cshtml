@model List<MessageDetailsViewModel>

<div class="container-fluid">
    <div class="row">
        <div class="offset-2 col-8">
            <h3 class="text-center mb-5">@Model[0].AdTitle</h3>
            @foreach (var message in Model)
            {

                <div class="row">
                    <div class="col-2">
                        @message.Sender
                    </div>
                    <div class="offset-7 col-3">
                        @message.SentOn
                    </div>
                </div>
                <p>
                    @if (message.Sender == this.User.Identity.Name)
                    {
                        <div class="card bg-warning">
                            <div class="card-body">
                                @message.Content
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="card bg-success">
                            <div class="card-body">
                                @message.Content
                            </div>
                        </div>
                    }
                </p>
            }
        </div>
    </div>
</div>