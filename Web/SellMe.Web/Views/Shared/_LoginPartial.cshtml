@using Microsoft.AspNetCore.Identity
@using SellMe.Data.Models
@inject SignInManager<SellMeUser> SignInManager
@inject UserManager<SellMeUser> UserManager

    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link"  asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="btn nav-link">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a asp-area="Identity" asp-page="/Account/Register" class="nav-link">Register</a>
            </li>
            <li class="nav-item">
                <a asp-area="Identity" asp-page="/Account/Login" class="nav-link">Login</a>
            </li>
        }
    </ul>