@model BaseViewModel

<form asp-controller="Ads" asp-action="BySearch" method="get">
    <div class="p-1 bg-light rounded rounded-pill shadow-sm mb-4 mt-4">
        <div class="input-group">
            <input asp-for="@Model.SearchBar.Input" type="search" placeholder="What're you searching for?" aria-describedby="button-addon1" class="form-control border-0 bg-light">
            <div class="input-group-append">
                <button id="button-addon1" type="submit" class="btn btn-link text-primary"><i class="fa fa-search"></i></button>
            </div>
        </div>
    </div>
</form>